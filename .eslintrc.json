{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "import",
        "simple-import-sort"
    ],
    "ignorePatterns": ["build", "coverage", "package-lock.json"],
    "rules": {
      "@typescript-eslint/no-empty-object-type": "off"
    }
}
